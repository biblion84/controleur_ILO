doctype html
html(lang='en')
    head
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        meta(name='description', content='')
        meta(name='author', content='lucas')
        title Controleur Serveur HyperV
        link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css")
        link(href='https://getbootstrap.com/examples/dashboard/dashboard.css', rel='stylesheet')
        link(href='/css/style.css', rel='stylesheet')
        //if lt IE 9
          script(src='../../assets/js/ie8-responsive-file-warning.js')
        //if lt IE 9
          script(src='https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js')
          script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')
    body
        nav.navbar.navbar-inverse.navbar-fixed-top
            .container-fluid
                .navbar-header
                    button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    |
                    a.navbar-brand(href='#') Project name
                #navbar.navbar-collapse.collapse
                    ul.nav.navbar-nav
                        li(id="date")
                    form.navbar-form.navbar-right
                        input.form-control(type='password', placeholder='password' id='password')
        .container-fluid
            .row
                .col-sm-3.col-md-2.sidebar
                    ul.nav.nav-sidebar
                        li.active
                            a(href='#')
                                | Overview
                                span.sr-only (current)
                        li
                            a(href='#') Reports
                        li
                            a(href='#') Analytics
                        li
                            a(href='#') Export


                .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
                    h1.page-header Dashboard
                    .row.placeholders
                        .col-xs-6.col-sm-3.placeholder(id="etatServeur")
                            div.img-responsive
                            h4 Etat Serveur
                            |
                            span.text-muted Serveur Allume
                            br
                            button Eteindre Serveur
                        .col-xs-6.col-sm-3.placeholder(id="bloquerServeur")
                            div.img-responsive
                            h4 Blocage extinction
                            |
                            span.text-muted Extinction autoris√©
                            br
                            button Bloquer Extinction
                        .col-xs-6.col-sm-3.placeholder(id="attente")
                            div.img-responsive
                            h4 Extinction en attente
                            |
                            span.text-muted Aucune
                            br
                            button Annuler extinction
                        .col-xs-6.col-sm-3.placeholder(id="isConnected")
                            div.img-responsive
                            h4 Communication avec le serveur
                            |
                            span.text-muted
                    h2.sub-header Section title
                    .table-responsive
                        table.table.table-striped(id="tableCommande")
                            thead
                                tr
                                    th Validation
                                    th Commande
                                    th Raison
                                    th Date
                            tbody


        script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js')
        script.
            window.jQuery || document.write('<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"><\\/script>')
